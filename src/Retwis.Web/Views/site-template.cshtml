@using System
@using System.Linq

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="/content/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="/Content/site.css" rel="stylesheet" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span> RetwisNancy</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/timeline">Timeline</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container retwispage">
        <div class="row">
            <div class="col-md-2 panel panel-default">
                <div class="panel-heading">
                    <h3>@@username</h3>
                </div>
                <ul class="list-unstyled">
                    <li><span class="glyphicon glyphicon-home"></span> <a href="/">Home</a></li>
                    <li><span class="glyphicon glyphicon-list-alt"></span> <a href="/index">Index</a></li>
                    <li><span class="glyphicon glyphicon-education"></span> <a href="/categories">All categories</a></li>
                </ul>
                
                <form class="form" action="/post" method="POST">
                    <div class="form-group">
                        <input type="text" name="status" placeholder="What are you doing?"/>
                    </div>
                    <button type="submit">:boom:</button>
                </form>
            </div>

            <div class="col-md-offset-1 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="container">
        <hr />
        <p>
            <small>
                <a href="https://github.com/bendetat/retwis-nancy">https://github.com/bendetat/retwis-nancy</a>
            </small>
        </p>
    </div>

    <script src="/Content/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>